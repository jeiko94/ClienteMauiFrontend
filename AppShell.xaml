<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClienteMauiFrontend.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClienteMauiFrontend"
    xmlns:views="clr-namespace:ClienteMauiFrontend.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ClienteMauiFrontend">

    <ShellContent Route="MainMenuCliente" ContentTemplate="{DataTemplate views:MainMenuView}"/>
    <ShellContent Route="CrearClienteView" ContentTemplate="{DataTemplate views:CrearClienteView}"  />
    <ShellContent Route="ActualizarClienteView" ContentTemplate="{DataTemplate views:ActualizarClienteView}"/>
    <ShellContent Route="BorrarClienteView" ContentTemplate="{DataTemplate views:BorrarClienteView}"/>
    <ShellContent Route="BuscarClienteView" ContentTemplate="{DataTemplate views:BuscarClienteView}"/>
    <ShellContent Route="ListarClientesView" ContentTemplate="{DataTemplate views:ListarClientesView}"/>

</Shell>
